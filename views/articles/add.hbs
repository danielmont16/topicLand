<div class="container container-body mx-auto p-5  mt-6 ">
  <h1 class="mb-12 uppercase tracking-wide text-gray-800 text-s font-bold">
    {{title}}
  </h1>

  <form class="w-full max-w-xlg container-row" method="POST">
    <div class="container-column-form w-full md:w-2/5">
      <div class="w-full px-3 mb-6 ">
        <label
          class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
          for="title"
        >
          Title
        </label>
        <input
          class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
          id="title" name="title"
          type="text"
          placeholder="An Awesome Article" required
        />
      </div>
      <div class="w-full px-3 mb-6 ">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="topic">
          Topic
        </label>
      <div class="relative">
        <select class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="topic" name="topic">
          {{#each topics}}
          <option>{{this.name}}</option>
          {{/each}}
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>
    </div>
    {{!-- end --}}
    <div class="w-full px-3 mb-6">
        <label
          class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
          for="author"
        >
          Author
        </label>
        <input
          class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          id="author"
          name="author"
          type="text"
          placeholder="Write your Name Here"
        />
    </div>
      <div class="w-full md:w-2/2 px-3 mb-6">
        <label
          class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
          for="creationDate"
        >
          Date
        </label>
        <input
          class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          id="creationDate"
          name="creationDate"
          type="date"
          placeholder="10/10/1999"
        />
      </div>
      </div>
      <div class="w-full md:w-3/3 px-3 mb-6 md:mb-0">
        <label
          class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
          for="grid-state"
        >
          Content
        </label>
        <div class="relative">
          <textarea name="content" id="content" placeholder="Write Your Article Here" class="content-field appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"></textarea>
        </div>
        </div>
        <button class="btn shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
        Submit
      </button>
      </div>
    </form>
</div>