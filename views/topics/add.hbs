<h1>{{title}}</h1>

<div class="addTopicContainer">

    <div class = "addTopicForm">
        <form method="POST">
        <fieldset>
            <label for="name" class="col-2">
            Name:
            </label>
            <input name="name" id="name" required />
        </fieldset>
        <fieldset>
            <label for="description" class="col-2">
            Description:
            </label>
            <input name="description" id="description" required />
        </fieldset>
        <fieldset>
            <label for="creationDate" class="col-2">
            Creation date:
            </label>
            <input name="creationDate" id="creationDate" type="date" required />
        </fieldset>
        <button class="btn btn-secondary">
            Add
        </button>
        </form>
    </div>

</div>