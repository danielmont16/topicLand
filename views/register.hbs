<div class="container mx-auto p-4 bg-white">
  <div class="w-full md:w-1/2 lg:w-1/3 mx-auto my-12">
  <h1 class="text-lg font-bold">
    Register
  </h1>
  <form method="post" class="flex flex-col mt-4">
    <fieldset class="form-group">
      
      <input
        class="px-4 py-3 w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 text-sm"
        name="username" id="username" required type="email" placeholder="email@email.com" />
    </fieldset>
    <fieldset class="form-group">
     
      <input
        class="px-4 py-3 mt-4 w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 text-sm"
        name="password" id="password" type="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" placeholder="password"/>
    
    </fieldset>
    <fieldset class="form-group">
      
      <input
        class="px-4 py-3 mt-4 w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 text-sm"
        name="confirm" id="confirm" type="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" placeholder="repeat password"/>
    </fieldset>
    <fieldset class="form-group">
      <button
        class="mt-4 px-4 py-3  leading-6 text-base rounded-md border border-transparent text-white focus:outline-none bg-gray-500 text-blue-100 hover:text-white focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer inline-flex items-center w-full justify-center items-center font-medium focus:outline-none">
        Register
      </button>
      <hr />
      <div class="flex flex-col items-center mt-5">
      <p>
      Already have an account?
      <a class="ml-1 font-medium text-blue-400" href="/login" title="Login">
        Login
      </a>
      </p>
      </div>
    </fieldset>
  </form>

</div>
</div>